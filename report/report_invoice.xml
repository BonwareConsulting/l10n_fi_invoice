<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_invoice_finnish" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='page']/div[@class='row'][1]/div[@class='col-xs-5 col-xs-offset-7']" position="attributes">
                <attribute name="class">col-xs-5</attribute>
            </xpath>
            <xpath expr="//div[@class='page']/div[@class='row'][1]/div[@class='col-xs-5']" position="after">
                <div>
                    <div>Invoice number: <t t-esc="o.id"></t></div>
                    <!--TODO: Viitenumero-->
                    <div>Invoice reference:</div>
                    <div>Invoice Date: <span t-field="o.date_invoice"/></div>
                    <div>Date due: <span t-field="o.date_due"/></div>
                    <!--TODO: Toimituspvm-->
                    <div>Date fulfilled: </div>
                    <div>Payment term: <span t-field="o.payment_term"></span></div>
                    <div>Our reference: <span t-field="o.origin"></span></div>
                    <div>Your reference: <span t-field="o.reference"></span></div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
