<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_invoice_finnish" inherit_id="account.report_invoice_document">
            <!--Set variable company for entire template-->
            <!--For some reason report.external_layout scope doesn't extend here so we have to find the company again-->
            <xpath expr="//div[@class='page']" position="before">
                <!--TODO: What if multicompany? Can maybe just copy logic from report.external_layout-->
                <t t-set="company" t-value="res_company"/>
            </xpath>
            <xpath expr="//div[@class='page']/div[@class='row'][1]/div[@class='col-xs-5 col-xs-offset-7']" position="attributes">
                <attribute name="class">col-xs-5</attribute>
            </xpath>
            <xpath expr="//div[@class='page']/div[@class='row'][1]/div[@class='col-xs-5']" position="after">
                <div>
                    <span>Invoice number: <t t-esc="o.id"></t></span>
                    <span><t t-esc="company.name"></t></span>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
